# apache2
virtualhosts:
  - name: vhost1
    datos:
      nameserver: interno.example1.org
      documentroot: /var/www/example1
      errorlog: errorapp1
      accesslog: accessapp2
  - name: vhost2
    datos:
      nameserver: interno.example2.org
      documentroot: /var/www/example2
      errorlog: errorapp2
      accesslog: accessapp2

mods_enabled:
  - rewrite

